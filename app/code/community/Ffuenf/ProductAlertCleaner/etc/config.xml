<config>
    <modules>
        <Ffuenf_ProductAlertCleaner>
            <version>1.0.0</version>
        </Ffuenf_ProductAlertCleaner>
    </modules>
    <global>
        <helpers>
            <ffuenf_productalertcleaner>
                <class>Ffuenf_ProductAlertCleaner_Helper</class>
            </ffuenf_productalertcleaner>
        </helpers>
        <models>
            <ffuenf_productalertcleaner>
                <class>Ffuenf_ProductAlertCleaner_Model</class>
            </ffuenf_productalertcleaner>
        </models>
    </global>
    <crontab>
        <jobs>
            <productalertcleaner>
                <schedule>
                    <config_path>productalertcleaner/general/scheduler_cron_expr</config_path>
                </schedule>
                <run>
                    <model>ffuenf_productalertcleaner/cleaner::clean</model>
                </run>
            </productalertcleaner>
        </jobs>
    </crontab>
    <default>
        <productalertcleaner>
            <general>
                <enable>1</enable>
                <scheduler_cron_expr>15 3 * * *</scheduler_cron_expr>
                <clean_alerts_older_than>365</clean_alerts_older_than>
            </general>
        </productalertcleaner>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Ffuenf_ProductAlertCleaner/>
            </modules>
        </suite>
    </phpunit>
</config>